---
import ContactoFormulario from "./ContactoFormulario.astro";
import Direccion from "./icons/DireccionIcon.astro";
import Mail from "./icons/MailIcon.astro";
import Telefono from "./icons/TelefonoIcon.astro";
---

<section id="contacto" class="text-white pb-24">
    <div class="flex gap-12">
        <div>
            <div class="flex flex-col gap-y-3">
                <div>
                    <h3 class="text-xl font-bold mb-4">Información de contacto</h3>

                    <p class="mb-5">
                        Rellene el formulario o póngase en contacto directamente a través de estos medios.
                    </p>
                </div>
        
                <div class="flex items-start">
                    <div class="flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-md bg-[#C9FF6C]/70">
                        <Mail class="h-6 w-6" />
                    </div>

                    <div class="ml-4">
                        <h4 class="text-lg font-medium">Email</h4>

                        <a href="mailto:hello@example.com" class="mt-1 font-semibold hover:text-[#8367c7]">
                            h.mac-04@hotmail.com
                        </a>
                    </div>
                </div>
        
                <div class="flex items-start">
                    <div class="flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-md bg-[#C9FF6C]/70">
                        <Direccion class="h-6 w-6" />
                    </div>

                    <div class="ml-4">
                        <h4 class="text-lg font-medium">Ubicación</h4>
                        <p class="mt-1 font-semibold">
                            Calle Sófocles, 5
                        </p>
                    </div>
                </div>
        
                <div class="flex items-start">
                    <div class="flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-md bg-[#C9FF6C]/70">
                        <Telefono class="h-6 w-6" />
                    </div>

                    <div class="ml-4">
                        <h4 class="text-lg font-medium">Teléfono</h4>

                        <a href="tel:+34652550116" class="mt-1 font-semibold hover:text-[#8367c7]">
                            +34 652 55 01 16
                        </a>
                    </div>
                </div>
            </div>
        </div>
    
        <div class="lg:col-span-3">
            <ContactoFormulario />
        </div>
    </div>
  </section>